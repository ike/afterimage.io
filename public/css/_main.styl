@import 'yeticss'

.header
  height 275px
  overflow hidden
  background-color #77898e
  background-image url('/images/vr-bg.png')
  background-size cover

.logo
  position absolute
  z-index 200
  width 100%
  padding 70px
  .img-container
    position relative
    display inline-block
    width 420px
    margin 0 auto
    height 90px
  .blur
    position absolute
    background-color #F3F4FF
    filter blur(75px)
    -webkit-filter blur(75px)
    width 100%
    height 100%
    top 0
    left 0
  img
    position absolute
    width 420px
    top 0
    left 0

.nav
  display inline-block
  position absolute
  z-index 300
  width 100%
  .login
    float right
    padding 15px
    a
      margin-left: 15px
      color: white
      
#header-vr
  position relative
  height 500px
  width 100%
  border none

.vr-container
  width 100%
  height 100%
  display none

.vr-cover-img
  z-index 300
  position absolute
  top 0
  left 0
  height 275px

.icon
  width 75px

.hardware
  width 100px

.integration
  min-width 50px
  max-width 65px

.center
  text-align center

.footer
  background-color black
  color white
  padding 20px

@media screen and (max-width: 575px)
  .logo
    .img-container
      padding-top 40px
      width 100%
    img
      width 100%
      padding-top 40px

