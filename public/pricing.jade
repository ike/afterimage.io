  script.
    function check() {
      var isAnnual = document.getElementById("annual").checked
      if (isAnnual) {
        var i,
            m = document.getElementsByClassName("monthly-pricing");
        for (i = 0; i < m.length; ++i) {
          m[i].style.display = "none"
        }
        var j,
            a = document.getElementsByClassName("annual-pricing");
        for (j = 0; j < a.length; ++j) {
          a[j].style.display = ""
        }
      } else {
        var i,
            m = document.getElementsByClassName("monthly-pricing");
        for (i = 0; i < m.length; ++i) {
          m[i].style.display = ""
        }
        var j,
            a = document.getElementsByClassName("annual-pricing");
        for (j = 0; j < a.length; ++j) {
          a[j].style.display = "none"
        }
      }
    }
    document.getElementById("pricing-select").addEventListener("click", function(e) {
      check()
    });
    check()

